{
  "tasks": {
    "dev": "deno run -A --import-map=./import_map.json src/main.ts",
    "up:gerd": "deno uninstall -g gerd && deno install -A --import-map=./import_map.json -g --name gerd src/main.ts",
    "un:gerd": "deno uninstall -g gerd",
    "i:gerd": "deno install -A --import-map=./import_map.json -g --name gerd src/main.ts",
    "release": "deno compile --output gerd --include src --import-map=./import_map.json -A src/main.ts",
    "test": "deno test",
    "new": "deno run -A scripts/new.ts"
  }
}
